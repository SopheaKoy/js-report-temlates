<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <style>
            @font-face {
                font-family: "SiemReap";
                src: url({#asset /asset/font/Siemreap-Regular.ttf @encoding=dataURI});
                format('ttf');
            }
            @font-face {
                font-family: "Mef1";
                src: url({#asset /asset/font/Content-Regular.ttf  @encoding=dataURI});
                format('ttf');
            }
            * {
                box-sizing: border-box;
            }
            html, body {
                margin: 0px;
                padding: 0px;
            }
            .main {
                display: flex;
                flex-direction: column;
                justify-content: space-between;
                width: 100%;
                height: 100%;
            }
            .header {
                width: 100%;
                padding-top: 20px;
                border-bottom: 1px solid black;
            }
            .footer {
                width: 100%;
                padding-bottom: 20px;
            }
        </style>
        <script src="https://cdn.tailwindcss.com"></script>
    </head>
    <body>
        {{#each $pdf.pages}}
            {{#if @index}}
                <div style="page-break-before: always;"></div>
            {{/if}}
            <main class="main">
                <header>
                </header>
                <footer class="footer" style="font-family:Mef1,SiemReap;">
                    <div class="text-center text-sm">{{getPageNumber @index @root.lng}}</div>
                </footer>
            </main>
        {{/each}}
    </body>
</html>

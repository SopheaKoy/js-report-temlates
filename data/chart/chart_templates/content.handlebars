<!DOCTYPE html>
<html>
    <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style rel='stylesheet' type='text/css'>
    @font-face {
        font-family: "Siemreap";
        src: url({#asset KhmerOSSiemreapRegular.ttf  @encoding=dataURI});
        format('ttf');
    }
    @font-face {
        font-family: "KhmerOSMuol";
        src: url({#asset KhmerOSMuolLightRegular.ttf  @encoding=dataURI});
        format('ttf');
    }
    @font-face {
        font-family: "Roman";
        src: url({#asset times_new_roman.ttf  @encoding=dataURI});
        format('ttf');
    }
    @font-face {
        font-family: 'Tacteing';
        src: url({#asset Tacteing.ttf @encoding=dataURI});
        format('ttf');
    }
    @font-face {
        font-family: 'limons1l';
        src: url({#asset limons1l.ttf @encoding=dataURI});
        format('ttf');
    }
    @font-face{
        font-family: "Arial"
        src: url({#asset arial.ttf @encoding=dataURI})
        format('ttf');
    }

    .indent-paragraph{
        text-indent: 75px;
    }
    
    .keep-together{
        page-break-inside:avoid;
    }
    .indent-negative-padding {
        padding-left: 0px;
    }

    body {
        font-size: 16px;
        font-family: "Roman", "Siemreap";
    }
    /* FONT */
    .font_muol {
        font-family: "Roman", "KhmerOSMuol";
    }
    .font_siemreap {
        font-family: "Roman", "Siemreap";
    }
    .font_tacteing {
        font-family: "Tacteing";
    }
    .font_arail{
        font-family:"Arial", "Siemreap";
    }
    /* END FONT */

    /* FONT SIZE */
    .font-base {
        font-size: 16px;
    }
    
    .text-main {
        font-size: 14px;
    }
    .text-sm-base {
        font-size: 16px;
    }

    .text_xs_sm{
        font-size: 13px;
    }
    .text-xs {
        font-size: 11px;
    }
    /* END FONT SIZE */

    /* BULLET POINT */
    .width-bullet-point{
        width: 25px;
    }
    .format, .format p{
        margin-top:8px;
        text-indent:75px;
    } 
    .format * {
        text-indent:0px;
    }
    .format>ol, .format>ul {
        padding-left: 75px;
    }
    .format ol, .format ul{
        margin-bottom: 8px;
    }

    /* unorder list */
    .format>ul{
        margin-left:25px;
    }
    .format>ul>li:before {
        position: absolute;
        margin-left: -25px;
        margin-top: -3px;
        content: "-";   
    } 
    .format ul ul{
        padding-left: 50px;
        list-style-type: circle;
         
    }
    .format ul ul ul{
        list-style-type: disc;
    }
    /* end ul */

    /* start ol */

    .format ol {
        counter-reset: section;           
        list-style-type: none;
        /* list-style-type: decimal; */
        color: black;
    }
    .format ol>li{
        margin-left: 25px;
    }
    .format ol>li ol>li{
        margin-left: 40px;
    }
    .format ol>li ol>li ol>li{
        margin-left: 60px;
    }
    .format ol>li ol>li ol>li ol>li{
        margin-left: 80px;
    }
    
    .format ol>li:before {
        font-family: "limons1l";
        font-size: 28px;
        position: absolute;
        margin-left: -25px;
        margin-top: -1px;
        counter-increment: section;         
        content: counters(section, ">") ">"; 
    } 
    .format ol>li ol>li:before {
        margin-left: -40px;
        
    }
    .format ol>li ol>li ol>li:before {
        margin-left: -60px;
        
    }
    .format ol>li ol>li ol>li ol>li:before {
        margin-left: -80px;   
    }
    /* end ol */
    
    .format ul>li {
        word-break: break-word;
    }


    /* END BULLET POINT */

    .draft_watermark {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 10;
        background-image: url("{#asset /asset/images/draft-km.png @encoding=dataURI}"); 
    }
    </style>


    <script src="https://cdn.tailwindcss.com"></script>
    </head>
    <body class="w-full h-full">
        <main class="leading-7 flex flex-col w-full h-full">
            <canvas id="issues-by-status-chart"></canvas>
        </main>
    </body>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/lodash.js/4.17.11/lodash.min.js"></script>
    <script src="https://unpkg.com/chart.js@2.7.3/dist/Chart.min.js"></script>    
    <script>
        // Access the canvas element by its ID
        const issuesByStatusChart = document.getElementById('issues-by-status-chart');

        // Initialize the chart
        const byStatusChrt = new Chart(issuesByStatusChart.getContext('2d'), {
            type: 'pie',
            data: {
                labels: ['Open', 'In Progress', 'Resolved', 'Closed', 'Reopened'], // Example labels
                datasets: [{
                    data: [12, 34, 45, 100, 12], // Example data
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)'
                    ],
                    borderWidth:0.5
                }]
            },
            options: {
                maintainAspectRatio: false,
                cutoutPercentage: 0,
                animation: {
                    duration: 0
                },
                title: {
                    display: true,
                    text: 'Issues by Status'
                },
                legend: {
                    position: 'bottom'
                }
            }
        });

        // Indicate that JSReport is ready to start
        window.JSREPORT_READY_TO_START = true;
    </script>
</html>

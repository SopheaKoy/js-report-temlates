            font-size: 14px;
        }
        .text-sm-base {
            font-size: var(--text-base)
        }

        .text_xs_sm{
            font-size: 13px;
        }
        .text-xs {
            font-size: 11px;
        }
        /* END FONT SIZE */
        .text_color{
            color: #2F5D00;
        }

        /* Application */
        .underline-text{
            text-decoration: underline dashed;
            text-decoration-color: rgba(128, 128, 128, 0.7); /* gray with 50% opacity */
        }

        .margin_checkbox{
            margin-top: -6px;
        }
